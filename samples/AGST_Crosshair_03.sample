{:tags []
     :is_new false
     :exports "chart"}

anychart.onDocumentReady(function() {
  // create data set on our data
  var dataSet = anychart.data.set([
    ['P1' , '3.6', '2.3'],
    ['P2' , '7.1', '4.0'],
    ['P3' , '8.5', '6.2'],
    ['P4' , '9.2' , '11.8'],
    ['P5' , '10.1', '13.0'],
    ['P6' , '11.6', '13.9'],
    ['P7' , '16.4', '18.0'],
    ['P8' , '18.0', '23.3' ],
    ['P9' , '13.2', '24.7' ],
    ['P10' , '12.0', '18.0'],
    ['P11' , '3.2' , '15.1'],
    ['P12' , '4.1' , '11.3'],
    ['P13' , '6.3' , '14.2'],
    ['P14' , '9.4' , '13.7'],
    ['P15' , '11.5', '9.9' ],
    ['P16' , '13.5', '12.1'],
    ['P17' , '14.8', '13.5'],
    ['P18' , '16.6', '15.1'],
    ['P19' , '18.1', '17.9'],
    ['P20' , '17.0', '18.9']
  ]);

  // map data for the first series, take x from the zero column and value from the first column of data set
  var seriesData_1 = dataSet.mapAs({x: [0], value: [1]});

  // create line chart
  chart = anychart.column();
  
  chart.crosshair(true);
  // the same as above
  // chart.crosshair().enabled(true);
	
  // set the indexes of the axes used
  chart.crosshair().yLabel().axisIndex(0);
  chart.crosshair().xLabel().axisIndex(0);
  
  // remove the x-axis line
  chart.crosshair().xStroke(null); 
  
  // turn on chart animation
  chart.animation(true);

  // set container id for the chart
  chart.container('container');

  // set chart title text settings
  chart.title('Column Chart with a crosshair');

  // create first series with mapped data
  chart.column(seriesData_1);

  // initiate chart drawing
  chart.draw();
});
